<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/find_title"
        style="@style/text_heading"
        android:text="Find Title"
        />

    <RelativeLayout
        android:id="@+id/find_input_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find_title">

        <EditText
            android:id="@+id/find_input"
            style="@style/input"
            android:layout_toStartOf="@+id/find_progress"/>

        <ProgressBar
            android:id="@+id/find_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/find_input"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/find_input"
            android:visibility="gone"
            />
    </RelativeLayout>

    <ListView
        android:id="@+id/find_list_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/find_input_progress"
        android:background="@drawable/border_basic"
        android:listSelector="@drawable/border_selected"
        android:padding="6dp">
    </ListView>
</RelativeLayout>
