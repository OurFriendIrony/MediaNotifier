<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/find_input_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/find_input"
            style="@style/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/find_progress"
            android:imeOptions="actionSend"
            android:inputType="text" />

        <ProgressBar
            android:id="@+id/find_progress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/find_input"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/find_input"
            android:background="@color/black"
            android:visibility="gone" />
    </RelativeLayout>

    <ListView
        android:id="@+id/find_list"
        style="@style/style_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/find_input_progress" />
</RelativeLayout>
