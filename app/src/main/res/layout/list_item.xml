<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/lookup_primarybar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/lookup_item_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:src="@drawable/img_concentric"
            />

        <TextView
            android:id="@+id/lookup_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/lookup_item_img"
            android:layout_toStartOf="@+id/lookup_item_date"
            android:layout_alignTop="@id/lookup_item_img"
            android:layout_alignBottom="@id/lookup_item_img"
            android:textAlignment="center"
            android:text="Item Title"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/lookup_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Date"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lookup_secondarybar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/lookup_primarybar"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/lookup_item_overview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Overview"
            android:textSize="10sp"
            />
    </RelativeLayout>


</RelativeLayout>
