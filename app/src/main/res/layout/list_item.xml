<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/lookup_item_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:src="@drawable/img_concentric"/>

    <TextView
        android:id="@+id/lookup_item_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignTop="@id/lookup_item_img"
        android:layout_toRightOf="@id/lookup_item_img"
        android:text="Item Title"
        android:textSize="22dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/lookup_item_overview"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_alignLeft="@+id/lookup_item_title"
        android:layout_below="@+id/lookup_item_title"
        android:text="Overview"
        android:textSize="8dp"
        />

    <TextView
        android:id="@+id/lookup_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lookup_item_title"
        android:layout_alignTop="@id/lookup_item_img"
        android:text="Date"
        android:textAlignment="textEnd"
        android:textSize="14dp"
        />

</RelativeLayout>
