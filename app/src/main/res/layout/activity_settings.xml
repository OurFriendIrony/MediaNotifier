<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".activities.SettingsActivity">

    <TextView
        android:id="@+id/settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:text="@string/tvlist_welcome"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_text"
        android:background="@drawable/border_alert"
        android:padding="10dp">

        <Button
            android:id="@+id/settings_button_delete_tv_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_delete_tv_all"
            />

        <Button
            android:id="@+id/settings_button_delete_movie_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings_button_delete_tv_all"
            android:text="@string/button_delete_movie_all"
            />

        <Button
            android:id="@+id/settings_button_delete_music_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings_button_delete_movie_all"
            android:text="@string/button_delete_music_all"
            />
    </RelativeLayout>
</RelativeLayout>
