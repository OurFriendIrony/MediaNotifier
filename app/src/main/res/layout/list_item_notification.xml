<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/border_basic_dotted"
                android:padding="4dp">


    <ImageView
        android:id="@+id/list_item_notification_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/border_basic"
        android:gravity="center"
        android:src="@drawable/img_tilde"
        />

    <TextView
        android:id="@+id/list_item_notification_show_title"
        style="@style/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/list_item_notification_img"
        android:gravity="top|start"
        android:text="Show Title"
        />

    <TextView
        android:id="@+id/list_item_notification_number"
        style="@style/text_title_lesser"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@id/list_item_notification_show_title"
        android:layout_alignTop="@+id/list_item_notification_episode_title"
        android:gravity="center"
        android:text="No"
        />

    <TextView
        android:id="@+id/list_item_notification_episode_title"
        style="@style/text_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/list_item_notification_show_title"
        android:layout_toEndOf="@+id/list_item_notification_number"
        android:gravity="top|start"
        android:text="Episode Title"
        />

</RelativeLayout>
