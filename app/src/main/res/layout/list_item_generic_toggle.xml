<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <RelativeLayout
        android:id="@+id/list_item_generic_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_item_generic_subtitle"
            style="@style/h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="start|center"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:maxLines="1"
            android:text="-subtext-" />

        <TextView
            android:id="@+id/list_item_generic_date"
            style="@style/h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end|center"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            android:maxLines="1"
            android:text="-date-" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/list_item_generic_primarybar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_generic_header">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">


            <ImageView
                android:id="@+id/list_item_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/list_item_toggle"
                android:layout_alignBottom="@id/list_item_toggle"
                android:layout_alignParentStart="true"
                android:contentDescription="TODO"
                android:gravity="start|center"
                android:paddingEnd="0dp"
                android:paddingStart="0dp" />

            <TextView
                android:id="@+id/list_item_generic_title"
                style="@style/h1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/list_item_toggle"
                android:layout_alignBottom="@id/list_item_toggle"
                android:layout_toEndOf="@id/list_item_picture"
                android:layout_toStartOf="@id/list_item_toggle"
                android:gravity="start|center"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:maxLines="1"
                android:text="-title-" />

            <include
                android:id="@+id/list_item_toggle"
                layout="@layout/button_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end|center"
                android:paddingEnd="0dp"
                android:paddingStart="10dp" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/list_item_generic_secondarybar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_generic_primarybar"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:id="@+id/list_item_generic_overview"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:text="-overview-" />
    </RelativeLayout>

    <TextView
        android:id="@+id/list_item_generic_id"
        android:layout_width="0dp"
        android:layout_height="0dp" />
</RelativeLayout>
