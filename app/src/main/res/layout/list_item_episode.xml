<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/list_item_notification_primarybar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_basic_dotted"
        android:orientation="horizontal"
        android:padding="4dp">

        <RelativeLayout
            android:id="@+id/list_item_notification_tick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_basic"
            android:gravity="center">

            <ImageView
                android:id="@+id/list_item_notification_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:src="@drawable/img_tilde"
                />

            <TextView
                android:id="@+id/list_item_notification_date"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/list_item_notification_img"
                android:layout_alignTop="@id/list_item_notification_img"
                android:layout_toEndOf="@+id/list_item_notification_img"
                android:gravity="center"
                android:paddingEnd="3dp"
                android:paddingStart="1dp"
                android:text="Date"
                android:textSize="10sp"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/list_item_notification_tick"
            android:layout_alignTop="@id/list_item_notification_tick"
            android:layout_toEndOf="@+id/list_item_notification_tick">

            <TextView
                android:id="@+id/list_item_notification_number"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/list_item_notification_episode_title"
                android:layout_margin="2dp"
                android:layout_marginStart="3dp"
                android:gravity="top|end"
                android:text="No"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/list_item_notification_episode_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/list_item_notification_number"
                android:gravity="top|start"
                android:text="Episode Title"
                android:textSize="20sp"
                android:textStyle="bold"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
