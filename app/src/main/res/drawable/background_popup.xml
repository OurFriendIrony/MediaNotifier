<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_100" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorBackgroundDefault" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="?attr/colorBackgroundPrimary3"
                android:endColor="?attr/colorBackgroundPrimary3"
                android:startColor="?attr/colorBackgroundPrimary2" />
            <!--<solid android:color="@color/grey_06" />-->
            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>
