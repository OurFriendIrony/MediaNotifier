<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_100" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="@color/black"
                android:endColor="@color/black"
                android:startColor="@color/grey_13" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>
