<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_10" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="@color/grey_06"
                android:endColor="@color/grey_06"
                android:startColor="@color/grey_09" />
            <!--<solid android:color="@color/grey_06" />-->
            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>
