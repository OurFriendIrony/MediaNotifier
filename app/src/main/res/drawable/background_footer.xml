<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorBackgroundDefault" />
        </shape>
    </item>
    <item
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorBackgroundPrimary1" />
            <corners
                android:topLeftRadius="6dp"
                android:topRightRadius="6dp" />
        </shape>
    </item>
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="?attr/colorBackgroundPrimary3"
                android:endColor="?attr/colorBackgroundPrimary3"
                android:startColor="?attr/colorBackgroundPrimary2" />
            <corners
                android:topLeftRadius="6dp"
                android:topRightRadius="6dp" />
        </shape>
    </item>
</layer-list>
