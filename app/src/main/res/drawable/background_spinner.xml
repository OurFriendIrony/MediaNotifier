<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="@color/black" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item
        android:left="1dp"
        android:right="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/white"
                android:endColor="@color/grey_06"
                android:startColor="@color/grey_06"
                android:type="linear" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>
