<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
        </shape>
    </item>
    <item
        android:height="20dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="?attr/colorBackgroundPrimary2"
                android:endColor="?attr/colorBackgroundPrimary2"
                android:startColor="?attr/colorBackgroundPrimary1" />

        </shape>
    </item>
    <item android:top="20dp" >
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorBackgroundPrimary2" />

        </shape>
    </item>
</layer-list>
