<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_100" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorBackgroundPrimary1" />
            <corners android:radius="6dp" />
            <stroke
                android:width="3dp"
                android:color="@color/red_bright" />
        </shape>
    </item>
</layer-list>
