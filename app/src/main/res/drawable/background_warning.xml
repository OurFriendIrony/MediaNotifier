<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:height="2dp">
    <shape android:shape="rectangle">
        <solid android:color="@color/black" />
    </shape>
</item>
<item
    android:height="20dp"
    android:top="2dp">
    <shape android:shape="rectangle">
        <gradient
            android:angle="270"
            android:centerColor="@color/red_dark"
            android:endColor="@color/red_dark"
            android:startColor="@color/red_darkest" />

    </shape>
</item>
<item android:top="20dp" >
    <shape android:shape="rectangle">
        <solid android:color="@color/red_dark" />

    </shape>
</item>
</layer-list>
