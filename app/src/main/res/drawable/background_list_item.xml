<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorBackgroundDefault" />
        </shape>
    </item>
    <item android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorBackgroundPrimary3" />
            <!--<corners-->
                <!--android:bottomRightRadius="15dp"-->
                <!--android:topRightRadius="5dp" />-->
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="?attr/colorBackgroundPrimary2"
                android:endColor="?attr/colorBackgroundPrimary2"
                android:startColor="?attr/colorBackgroundPrimary1" />
            <corners
                android:bottomRightRadius="7dp"
                 />
            <!--android:topRightRadius="5dp"-->
        </shape>
    </item>
</layer-list>
