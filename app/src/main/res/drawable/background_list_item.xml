<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?colorPrimaryBackground" />
        </shape>
    </item>
    <item android:right="3dp">
        <shape android:shape="rectangle">
            <solid android:color="?colorUnderBackground" />
            <corners
                android:bottomRightRadius="15dp"
                android:topRightRadius="5dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:right="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="?colorSecondaryLBackground"
                android:endColor="?colorSecondaryLBackground"
                android:startColor="?colorSecondaryHBackground" />
            <corners
                android:bottomRightRadius="15dp"
                android:topRightRadius="5dp" />
        </shape>
    </item>
</layer-list>
