<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/app_header" />
            <size
                android:width="200dp"
                android:height="10dp" />
        </shape>
    </item>
    <item android:top="7dp">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="?attr/colorBackgroundDefault"
                android:type="linear" />
        </shape>
    </item>
    <item android:bottom="7dp">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="?attr/colorBackgroundDefault"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
