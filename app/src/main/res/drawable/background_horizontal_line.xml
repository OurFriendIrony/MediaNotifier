<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="4dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="2dp"
                android:top="2dp"/>
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
    <item
        android:height="1dp"
        android:bottom="0dp"
        android:left="2dp"
        android:right="0dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_06"/>
        </shape>
    </item>
    <item
        android:height="2dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="1dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/>
        </shape>
    </item>
</layer-list>
