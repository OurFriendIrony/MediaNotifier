<resources>

    <style name="Theme.MediaNotifier" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_header</item>
        <item name="colorPrimaryDark">@color/app_taskbar</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MediaNotifier.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.MediaNotifier.SplashTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="input" parent="Theme.MediaNotifier">
        <item name="android:background">@drawable/background_input</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/grey_04</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="title" parent="Theme.MediaNotifier">
        <item name="android:textColor">@color/grey_04</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="h1" parent="Theme.MediaNotifier">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="h2" parent="Theme.MediaNotifier">
        <item name="android:textColor">@color/grey_04</item>
    </style>

    <style name="button" parent="Theme.MediaNotifier">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text" parent="Theme.MediaNotifier">
        <item name="android:textColor">@color/grey_04</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="subtext" parent="Theme.MediaNotifier">
        <item name="android:textColor">@color/grey_04</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="notification" parent="Theme.MediaNotifier">
        <item name="android:background">@drawable/button_notification_off</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="pager_strip" parent="Theme.MediaNotifier">
        <item name="android:background">@drawable/background_pager_strip</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_list" parent="Theme.MediaNotifier">
        <item name="android:background">@drawable/background_list</item>
    </style>

    <style name="style_footer" parent="Theme.MediaNotifier">
        <item name="android:background">@drawable/background_footer</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="style_list_item" parent="Theme.MediaNotifier">
        <item name="android:background">@drawable/background_list_item</item>
    </style>

    <style name="style_input" parent="Theme.MediaNotifier">
        <item name="android:background">@drawable/background_input</item>
    </style>

    <style name="horizontal_line" parent="Theme.MediaNotifier">
        <item name="android:height">4dp</item>
        <item name="android:background">@drawable/background_horizontal_line</item>
    </style>
</resources>
