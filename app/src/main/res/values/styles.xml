<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_header</item>
        <item name="colorPrimaryDark">@color/app_taskbar</item>
        <item name="colorAccent">@color/color_default_complex_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="text_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="text_title_large">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="text_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="text_title_lesser">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="text_subtitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="text_general">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">monospace</item>
    </style>

    <!--                                           -->

    <style name="input_NEW">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/border_new_input</item>
    </style>

    <style name="dropdown_NEW">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/grey_04</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/border_new_input</item>
    </style>

    <style name="text_NEW_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/grey_04</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="text_NEW_title_large">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/grey_04</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="text_NEW_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_04</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="text_NEW_title_lesser">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="text_NEW_subtitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="text_NEW_general">
        <item name="android:textColor">@color/grey_04</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="style_list">
        <item name="android:background">@drawable/border_new_list_tile</item>
    </style>

    <style name="style_list_item">
        <item name="android:background">@drawable/border_new_item_tile</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:background">@color/black</item>
    </style>
</resources>
