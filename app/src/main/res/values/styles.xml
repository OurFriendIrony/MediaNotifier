<resources>
    <!-- Default Styles -->
    <style name="AppTheme.DEFAULT" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_header</item>
        <item name="colorPrimaryDark">@color/app_taskbar</item>
        <item name="colorAccent">@color/color_default_complex_accent</item>

        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>

        <item name="android:textColor">?colorTextPrimary</item>
    </style>

    <style name="AppTheme.DEFAULT.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.GENERIC.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.GENERIC.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Primary Styles -->

    <style name="AppTheme.DARK" parent="AppTheme.DEFAULT">
        <item name="colorPrimary">@color/app_header</item>
        <item name="colorPrimaryDark">@color/app_taskbar</item>
        <item name="colorAccent">@color/color_default_complex_accent</item>

        <item name="colorTextPrimary">@color/white</item>
        <item name="colorTextSecondary">@color/grey_04</item>
        <item name="colorTextInverted">@color/black</item>
    </style>

    <style name="AppTheme.LIGHT" parent="AppTheme.DEFAULT">
        <item name="colorPrimary">@color/app_header</item>
        <item name="colorPrimaryDark">@color/app_taskbar</item>
        <item name="colorAccent">@color/purple_bright</item>

        <item name="colorTextPrimary">@color/black</item>
        <item name="colorTextSecondary">@color/grey_10</item>
        <item name="colorTextInverted">@color/white</item>
    </style>

    <!-- Feature Styles -->
    <style name="input" parent="AppTheme.DEFAULT">
        <item name="android:background">@drawable/background_input</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/grey_04</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="title" parent="AppTheme.DEFAULT">
        <item name="android:textColor">?colorTextSecondary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="h1" parent="AppTheme.DEFAULT">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="h2" parent="AppTheme.DEFAULT">
        <item name="android:textColor">@color/grey_04</item>
    </style>

    <style name="h2_contrast" parent="AppTheme.DEFAULT">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text" parent="AppTheme.DEFAULT">
        <item name="android:textColor">@color/grey_04</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="subtext" parent="AppTheme.DEFAULT">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="notification" parent="AppTheme.DEFAULT">
        <item name="android:background">@drawable/background_notification</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="pager_strip" parent="AppTheme.DEFAULT">
        <item name="android:background">@drawable/background_pager_strip</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_list" parent="AppTheme.DEFAULT">
        <item name="android:background">@drawable/background_list</item>
    </style>

    <style name="style_list_item" parent="AppTheme.DEFAULT">
        <item name="android:background">@drawable/background_list_item</item>
    </style>

    <style name="style_input" parent="AppTheme.DEFAULT">
        <item name="android:background">@drawable/background_input</item>
    </style>

    <style name="horizontal_line" parent="AppTheme.DEFAULT">
        <item name="android:height">4dp</item>
        <item name="android:background">@drawable/background_horizontal_line</item>
    </style>
</resources>
