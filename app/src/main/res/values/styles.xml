<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_header</item>
        <item name="colorPrimaryDark">@color/app_taskbar</item>
        <item name="colorAccent">@color/color_default_complex_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="DRK_input">
        <item name="android:background">@drawable/background_input</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/grey_04</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="DRK_text_title">
        <item name="android:textColor">@color/grey_04</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DRK_text_h1">
        <item name="android:textColor">@color/grey_04</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DRK_text_h2">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DRK_text_h2_contrast">
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DRK_text">
        <item name="android:textColor">@color/grey_04</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="DRK_text_subtitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="DRK_text_notification">
        <item name="android:background">@drawable/background_notification</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="style_list">
        <item name="android:background">@drawable/background_list</item>
    </style>

    <style name="style_list_item">
        <item name="android:background">@drawable/background_list_item</item>
    </style>

    <style name="style_input">
        <item name="android:background">@drawable/background_input</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:background">@color/black</item>
    </style>
</resources>
